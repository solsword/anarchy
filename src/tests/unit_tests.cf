#include "core/unit.h"
#include <stdio.h>

#define TEST_ITERATIONS 256

int test_fold() {
  int i;
  id results[TEST_ITERATIONS];

  results[0] = 10290192;

  for (i = 1; i < TEST_ITERATIONS; ++i) {
    results[i] = fold(results[i-1], 17 + i);
  }

  for (i = TEST_ITERATIONS - 1; i > 0; --i) {
    id x = fold(results[i], 17 + i);
    if (x != results[i-1]) {
      fprintf(
        stderr,
        "Fold test failed at iteration %d: %lu != %lu.\n",
        i, x, results[i-1]
      );
      return i;
    }
  }

  return 0;
}

